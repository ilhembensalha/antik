<!-- Replace with your actual popup layout components -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- CardView to wrap the existing components -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/popupTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popup Title"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/popupDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popup Description"/>


            <ImageView
                android:id="@+id/popupImageView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"

                android:layout_marginBottom="5dp"
                />
            <!-- Add more details as needed -->
            <Button
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button to close/dismiss the popup -->


</LinearLayout>
